<html>
<head>
    <title>Chase The Dog</title>
    <style>
        body {
            background: #333;
        }
        h1 {
            text-align: center;
            font-size: 72px;
            font-weight: bold;
            color: #fff;
        }
        .pictures {
            text-align: center;
        }
        .pictures div {
            background-size: cover;
            background-position: center;
            display: inline-block;
            width: 500px;
            height: 500px;
        }
        @media (max-width: 999px) {
            h1 {
                font-size: 48px;
            }
            .pictures div {
                width: 100%;
                height: 500px;
                margin-bottom: 10px;
            }
        }
    </style>
</head>
<body>
    <h1>Chase's Awesome Photo Gallery</h1>
    <div class="pictures">
        {{#each photos}}
            <div style="background-image: url(/{{this}});"></div>
        {{/each}}
    </div>
</body>
</html>
